# Exemplo .env para o docker-compose
# Copie este arquivo para `.env` e ajuste valores sensíveis antes de rodar em produção

# Banco de dados
DB_NAME=bibliotech
DB_USER=bibliotech
DB_PASSWORD=bibliotech
DB_PORT=5432
DB_SCHEMA_NAME=public

# API
API_PORT=8090
JDBC_URL=jdbc:postgresql://postgres:5432/bibliotech

# Email (SMTP)
EMAIL_SMTP=mailhog
SENHA_EMAIL_SMTP=
SPRING_MAIL_PORT=1025

# PgAdmin
PGADMIN_DEFAULT_EMAIL=admin@local
PGADMIN_DEFAULT_PASSWORD=admin
PGADMIN_PORT=8080

# Segurança
JWT_SECRET=change-me-in-prod

# Se não quiser que o Actuator tente validar conexão SMTP em ambientes sem credenciais, defina como false
MANAGEMENT_HEALTH_MAIL_ENABLED=true
